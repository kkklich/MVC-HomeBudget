@model WebApplicationHomeBudget.Models.wallet

@{
    ViewBag.Title = "Edytuj";
}
    <link href="~/Content/StyleHTML1.css" rel="stylesheet" />
<h2>Edytuj</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
<div class="form-horizontal">
    <h4>Portfele</h4>
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.HiddenFor(model => model.id_wallet)

    <div class="form-group">
        <label class=" control-label col-md-2">Nazwa portfela</label>
        <div class="col-md-10">
            @Html.EditorFor(model => model.Name_wallet, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Name_wallet, "", new { @class = "text-danger" })
        </div>
    </div>

    
    @Html.Hidden("id_Client_wall", (object)ViewBag.id_clientWall)

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Zapisz" class="btn btn-group-vertical" />
        </div>
    </div>
</div>
}

