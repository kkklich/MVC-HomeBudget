@model WebApplicationHomeBudget.Models.wallet

@{
    ViewBag.Title = "Usuń";
}

<h2>Usuń</h2>
<link href="~/Content/StyleHTML1.css" rel="stylesheet" />
<h3>Napewno chcesz usunąć portfel?</h3>
<div>
    <h4>Portfel</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            <label class=" control-label col-md-2">Nazwa portfela</label>
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Name_wallet)
        </dd>

    </dl>


    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        @Html.Hidden("id_Client_wall", (object)ViewBag.id_Client_wall)
        <div class="form-actions no-color">
            <input type="submit" value="Usuń" class="btn btn-group-vertical" />
            <input type="button" value="Edytuj" class="btn btn-group-vertical" onclick="location.href= '@Url.Action("Edit","walletes",new { id = Model.id_wallet } ) ' " />

        </div>
    }
</div>
<br />
<a style="color:red">@ViewBag.info</a>