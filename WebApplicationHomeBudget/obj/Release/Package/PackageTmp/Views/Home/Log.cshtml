@model WebApplicationHomeBudget.Models.client


@{
    ViewBag.Title = "Logowanie";
}
<html>
<head>

 
    <link href="~/Content/main3.css" rel="stylesheet" />
</head>

<body >


    <h2>Zaloguj</h2>

    
    <div>

        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="form-horizontal">

                <hr />



                <div class="form-group">
                    <label class="control-label col-md-2">Login</label>
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.Login_Name_Unique, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Login_Name_Unique, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    <label class="control-label col-md-2"> Hasło</label>
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.Password_text, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Password_text, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" value="Zaloguj" class="btn btn-group-vertical" />
                        <input type="button" value="Załóż konto" onclick="location.href='@Url.Action("Register","Home")'" class="btn btn-group-vertical" />
                    </div>
                </div>
            </div>
        }











       
    </div>

</body>
</html>