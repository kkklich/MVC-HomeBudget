@model WebApplicationHomeBudget.Models.Transact

@{
    ViewBag.Title = "Przelej";
}
<link href="~/Content/StyleHTML1.css" rel="stylesheet" />
<link href="~/Content/main3.css" rel="stylesheet" />
<h2>Przelej</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

<div class="form-horizontal">

    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })



    <div class="form-group">
        <label class="control-label col-md-2">Wypłać z portfela</label>
        <div class="col-md-10">
            @Html.DropDownList("wallfrom", ViewBag.id_wallet2 as SelectList, null, htmlAttributes: new { @class = "form-control" })

        </div>
    </div>



    <div class="form-group">
        <label class="control-label col-md-2">Wpłać do portfela</label>
        <div class="col-md-10">
            @Html.DropDownList("wallto", ViewBag.id_wallet2 as SelectList, null, htmlAttributes: new { @class = "form-control" })

        </div>
    </div>

    <div class="form-group">
        <label class="control-label col-md-2">Kwota</label>
        <div class="col-md-10">
            <input type="text" name="Amount" class="form-control" value="@ViewBag.amount" required />
            @*@Html.EditorFor(model => model.Amount, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Amount, "", new { @class = "text-danger" })*@

        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <a style="color:red">@ViewBag.w</a>
        </div>
    </div>
   
    
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Przelej" class="btn btn-default" />
        </div>
    </div>
</div>
}


